#include<iostream>
using namespace std;
class manoj
{
   public:
   void sort(int *arr,int size)
   {
    if(size<=1)
    {
      return ;
    }
    sort(arr,size-1);

     int i=size-1;
     int key=arr[i];
     int j=i-1;
    while(j>=0 && arr[j]>key)
    {
      arr[j+1]=arr[j];
      j--;
    }
    arr[j+1]=key;
      }
   
};

// This is a main section in the program.
int main()
{
 int arr[]={10,3,2,1,5};
 int size=sizeof(arr)/sizeof(arr[0]);
 manoj m1;
 m1.sort(arr,size);
 cout<<endl;
 for(int i=0;i<size;i++)
 {
   cout<<arr[i];
   if(i!=size-1)
   {
      cout<<",";
   }
 }
 return 0;
}
