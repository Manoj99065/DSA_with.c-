#include<iostream>
using namespace std;
int recursion(int n)
{
   

   if(n==0)
      {
      return 1;
      }
   int smaller=recursion(n-1);
   int bigger=smaller*n;
   cout<<"Smaller * n = "<< smaller<<"*"<<n<<" = "<<bigger<<endl;
   return bigger;
   
}

int main()
{
   int n;
   cout<<"Enter the value of number = ";
   cin>>n;
   int s=recursion(n);
   cout<<s;
   return 0;
}
