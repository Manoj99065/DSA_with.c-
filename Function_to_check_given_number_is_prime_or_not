
#include<iostream>
using namespace std;
int prime(int n){
int count=0;
   for(int i=1;i<=n;i++)
   {
      if(n%i==0)
      {
         count=count+1;
      }
   }
   if(count==2)
   return count;
   }

int main()
{
   
   int r;
   cout<<"Enter the value of the redius = ";
   cin>>r;
   // cout<<"Yes , The given number is pirme "<<prime(r);
   if(prime(r)==2)
   {
      cout<<"Given number is prime ";
      
   }
   else
   {
      cout<<"Given number is not prime ";
   }
return 0;
}
