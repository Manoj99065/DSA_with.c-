#include<iostream>
#include<queue>
using namespace std;
int main()
{
   priority_queue<int>a;
   priority_queue<int,vector<int>,greater<int>>mini;
   a.push(20);
   a.push(50);
   a.push(40);
   int n;
   n=a.size();
   cout<<n;
   for(int i=0;i<n;i++)
   {
      cout<<a.top()<<" ";
      a.pop();
   }
   cout<<endl;


   mini.push(20);
   mini.push(50);
   mini.push(40);
   n=mini.size();
   cout<<n;
   for(int i=0;i<n;i++)
   {
      cout<<mini.top()<<" ";
      mini.pop();
   }
   cout<<endl;
}
