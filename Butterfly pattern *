#include<iostream>
using namespace std;
int main()
{
   int n=4;
   for(int i=0;i<n;i++)
   {
      for(int j=0;j<=i;j++)
      {
         cout<<"*";
      }
      for(int j=0;j<2*(n-i-1);j++)
      {
      cout<< " ";
      }
      for(int j=0;j<=i;j++)
      {
      cout<<"*";
      }
      cout<<endl;
   }
   // Bottom section of the given question is solve here.
   for(int i=n;i>0;i--)
   {
      for(int j=0;j<i;j++)
      {
         cout<<"*";
      }
      if(i!=0)
      for(int j=1;j<2*(n-i)+1;j++)
      {
         cout<<" ";
         // cout<<i;
      }
      for(int j=0;j<i;j++)
      {
         cout<<"*";
      }
      cout<<endl;
   }
   return 0;
}
