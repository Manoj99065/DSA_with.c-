#include<iostream>
using namespace std;
int main()
{
   int arr1[]={1,3,5,7,9};
   int size1=sizeof(arr1)/sizeof(arr1[0]);
   int arr2[]={2,4,6,8};
   int size2=sizeof(arr2)/sizeof(arr2[0]);
   int i=0;
   int j=0;
   int *arr3=new int;
   int s=0;
   while(i<size1 && j<size2)
   {
      if(arr1[i]<arr2[j]){
      arr3[s]=arr1[i];
      i=i+1;
      s=s+1;
      }
      else
      {
         arr3[s]=arr2[j];
         j=j+1;
         s=s+1;
      }
   }
   while(i<size1)
   {
      arr3[s]=arr1[i];
      i=i+1;
      s=s+1;
   }
   while(j<size2)
   {
      arr3[s]=arr1[j];
      j=j+1;
      s=s+1;
   }

   // in this section we are calculate the size of an array and display the element.
   for(int y=0;y<s;y=y+1)
   {
      cout<<arr3[y];
      if(y!=s-1)
      {
      cout<<",";
   }
}
return 0;
}
