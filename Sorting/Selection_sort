#include<iostream>
using namespace std;
class Manoj
{
   public:
   int array(int arr[],int size)
   {
      for(int i=0;i<size;i++)
      { 
         int k=i;
         int t;
         for(int j=i+1;j<size;j++)
         {
          if(arr[j]<arr[k])
         { 
           k=j;
         }
      }
         int temp=arr[i];
         arr[i]=arr[k];
         arr[k]=temp;
   }
         for(int i=0;i<size;i++)
         {
            cout<<arr[i];
            if(i!=size-1)
            {
               cout<<",";
            }
      }
   }
};
//  THis is a main section which help in to execute the program ,becuse starting the execution of the program here.
int main()
{
int arr[]={23,549,42,13,5,235,245};
int size=sizeof(arr)/sizeof(arr[0]);
Manoj m1;
m1.array(arr,size);
return 0;
}
