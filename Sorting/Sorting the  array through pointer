#include <iostream>
using namespace std;
// int swaps(int a,int b)
// {
//     int temp=a;
//     a=b;
//     b=temp;
//     return a,b;
// }
void sortColors(int arr[], int size) {
    int low = 0, mid = 0, high = size - 1;

    while (mid <= high) {
        if (arr[mid] == 0) {
            int temp=arr[low];
            arr[low]= arr[mid];
            arr[mid]=temp;
            low++;
            mid++;
            cout<<mid<<endl;
        } else if (arr[mid] == 1) {
            mid++;
        } else { // arr[mid] == 2
            swap(arr[mid], arr[high]);
            high--;
        }
    }

    // Display the sorted array
    for (int i = 0; i < size; i++) {
        cout << arr[i];
        if (i != size - 1) cout << ",";
    }
    cout << endl;
}

int main() {
    int arr[] = {0, 1, 0,2,2,1, 2, 2, 0, 0, 1, 1, 0};
    int size = sizeof(arr) / sizeof(arr[0]);
    sortColors(arr, size);
    return 0;
}
