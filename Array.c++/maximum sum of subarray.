#include<iostream>
#include<algorithm>
using namespace std;
int main()
{
   int arr[]={3,-4,5,4,-1,7,-8};
   int size=sizeof(arr)/sizeof(arr[0]);
   int maxsum=0;
   for(int i=0;i<size;i++)
   {  int sum=0;
      for(int j=i;j<size;j++)
      {
         // for(int k=i;k<=j;k++)
         {
            sum=arr[j]+sum;
            cout<<arr[j]<<" ";
            maxsum=max(sum,maxsum);
            // cout<<maxsum;
         }

         cout<<" ";
      }
      cout<<endl;

   }
cout<<"maximum sum of number is = "<<maxsum;
   return 0;
}
