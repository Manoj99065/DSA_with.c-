#include<iostream>
#include<cstring>
#include<cctype>
using namespace std;
class manoj
{
   public:
   void array(char arr[],int size)
   {  
      // cout<<"i am enter in the code";
      char arr1[size];
      int m=0;
      int n=0;
      int max=0;
      int  *arr2=new int[size];
      // cout<<size-1;
      for(int i=0;i<size;i=i+1)
      {
         arr[i]=tolower(arr[i]);
         int count=1;
         for(int j=i+1;j<size;)
         {  arr[j]=tolower(arr[j]);
            if(arr[i]==arr[j])
            { 
               count=count+1;
               for(int y=j;y<size-1;y=y+1)
               { 
                  // arr[y]=tolower(arr[y]);
                  arr[y]=arr[y+1];
               }
               size=size-1;
            }
            else
            {
               j=j+1;
            }
         }
         
         arr1[m++]=arr[i];
         arr2[n++]=count;
      }
      int z=0;
      for(int s=0;s<n;s=s+1)
      {
         if(arr2[s]>z)
         {
            z=arr2[s];
            max=s;
         }
      }

      // // in this section we are dispaly maximum elment.
      cout<<"Maximum elment is = "<<arr1[max]<<" and is count = "<<arr2[max];
      delete[]arr2;
   }

};

// This is a main section in the program.
int main()
{
   char *arr=new char[100];
   cout<<"Enter string here :- ";
   cin>>arr;
   int size=strlen(arr);
   manoj m1;
   m1.array(arr,size);
   delete[]arr;
   return 0;
}
