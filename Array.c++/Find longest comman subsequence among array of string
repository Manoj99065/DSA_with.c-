#include<iostream>
using namespace std;
int main()
{
   string arr[]={"flower","flight","flow"};
   int s=sizeof(arr)/sizeof(arr[0]);
   string sh="";
   // cout<<arr[0];
   for(int i=0;i<arr[0].length();i++)
   {
      char ch=arr[0][i];
      // cout <<ch;
      bool match=true;
      for(int j=1;j<s;j++)
      {
      if(arr[j].size()<i || ch!=arr[j][i])
      {
         match=false;
         break;
      }
      }
      if(match==false)
      {
         break;

      }
      else
      {
       sh.push_back(ch);
      }
      }
   cout<<sh;
   return 0;
}  
