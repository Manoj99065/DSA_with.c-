#include<iostream>
#include<algorithm>
using namespace std;
int main()
{
   int arr[]={3,-4,5,4,-1,7,-8};
   int maxsum=0;
   int cs=0;
   int size=sizeof(arr)/sizeof(arr[0]);
   {
      for(int i=0;i<size;i++)
      {
         cs=arr[i]+cs;
         maxsum=max(cs,maxsum);
         if(cs<0)
         {
            cs=0;
         }
      }
   }
   cout<<maxsum;
   return 0;
}
