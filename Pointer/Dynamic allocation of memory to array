
#include<iostream>
using namespace std;
int sum1(int arr[],int size)
{int sum=0;
   for(int i=0;i<size;i=i+1)
   {
    sum+=arr[i];
   }
   return sum;
}
int main()
{
   int n;
   cout<<"Enter the size of an array = ";
   cin>>n;
   int *arr=new int[n];
   for(int i=0;i<n;i=i+1)
   {
      cin>>arr[i];
   }
   int sum=sum1(arr,n);
   cout<<"This is a final answer of array "<<sum;
}
