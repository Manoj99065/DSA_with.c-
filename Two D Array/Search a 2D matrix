#include<iostream>
using namespace std;
int main()
{
   int size=4;
   int size1=4;
   int arr[size][size1]={{1,4,7,11},{2,5,8,12},{3,6,9,16},{10,13,14,22}};
   int rightcol=size1;
   int leftrow=0;
   int left=0;
   int target;
   cout<<"Enter the element to search :- ";
   cin>>target;
   int right=size1-1;
   while(left<=size&&right>=0)
   {
      int mid=arr[left][right];
      if(target==mid)
      {
         cout<<"Element is find in the array";
         return 1;
      }
      
     if(target>mid)
     {
     left=left+1;
     }
     else
     {
      right=right-1;
     }
   }
   cout<<left<<" "<<right;
   cout<<"Element is not exist";
   return 0;
}
