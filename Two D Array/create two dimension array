#include<iostream>
using namespace std;
int main()
{
   int size=3;
   int size1=4;
   int j=0;
   int arr[size][size1];

// insert element in the arrays.
   for(int i=0;i<size1;i=i+1)
   {
      for(j=0;j<size;j=j+1)
      { 
         cout<<"Enter element :- ";
         cin>>arr[i][j];
      }
   }
// display element in the array.
   for(int i=0;i<size1;i=i+1)
   {
      for(j=0;j<size;j=j+1)
      { 
         cout<<arr[i][j]<<" ";
      }
      cout<<endl;
   }
   return 0;
}
